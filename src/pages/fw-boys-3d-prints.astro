---
import { getCollection } from 'astro:content';
import Layout from '../layouts/layout.astro';

// Pulling from the correct lowercase collection
const boysProducts = await getCollection('fwboysproducts');
---

<Layout title="FW Boys 3D Prints | Flying Wombat Designs">
  <nav class="boys-nav">
    <div class="nav-left">
      <a href="/" class="back-link">‚Üê back to wombat designs</a>
    </div>
    <div class="nav-right">
      <span class="boys-brand-tag">FW BOYS PRINTS</span>
    </div>
  </nav>

  <section class="boys-hero">
    <div class="hero-content">
      <h1 class="glitch-title">PRECISION <span class="cyan-text">3D</span> PRINTS</h1>
      <p class="hero-subline">Custom manufacturing. High-grade polymers. Wombat engineering.</p>
    </div>
  </section>

  <main class="boys-gallery">
    <div class="tech-grid">
      {boysProducts.map(item => (
        <a href={`/boys-products/${item.slug}`} class="tech-card">
          <div class="tech-image-box">
             <img 
              src={item.data.gallery?.[0]?.image || '/placeholder.png'} 
              alt={item.data.title} 
             />
          </div>
          <div class="tech-card-content">
            <h2 class="tech-card-title">{item.data.title}</h2>
            <p class="tech-card-price">{item.data.price}</p>
            
            <div class={`status-indicator ${item.data.status}`}>
              <span class="status-dot"></span>
              <span class="status-text">
                {item.data.status === 'in_stock' ? 'SYSTEM_STATUS: READY_TO_SHIP' : 'SYSTEM_STATUS: CUSTOM_BUILD_ONLY'}
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>

<style>
  :root { --cyan: #00f2ff; }

  /* PREVENT HORIZONTAL OVERFLOW */
  :global(html, body) {
    overflow-x: hidden;
    width: 100%;
    background-color: #000 !important;
    color: #fff !important;
    margin: 0;
    padding: 0;
  }

  .boys-nav { 
    display: flex; 
    justify-content: space-between; 
    padding: 1rem 5%; 
    border-bottom: 1px solid var(--cyan); 
    align-items: center; 
    font-family: 'Space Mono', monospace; 
    min-height: 70px;
    gap: 15px;
  }
  
  .nav-left { flex: 1; min-width: 0; }
  .back-link { color: #666; text-decoration: none; font-size: 0.8rem; white-space: nowrap; }
  
  .nav-right { display: flex; align-items: center; flex-shrink: 0; }
  .boys-brand-tag { color: var(--cyan); font-weight: bold; letter-spacing: 2px; text-align: right; }

  /* FULL WIDTH BREAKOUT HERO */
  .boys-hero { 
    width: 100vw;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    height: 40vh; 
    background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/3d-hero-banner.png'); 
    background-size: cover; 
    background-position: center; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    border-bottom: 2px solid var(--cyan); 
    text-align: center; 
  }
  .glitch-title { font-family: 'Space Mono', monospace; font-size: clamp(2rem, 8vw, 4rem); letter-spacing: 5px; margin: 0; }
  .cyan-text { color: var(--cyan); text-shadow: 0 0 15px var(--cyan); }
  .hero-subline { font-family: 'Space Mono', monospace; color: #888; font-size: 0.9rem; margin-top: 10px; }

  .boys-gallery { padding: 4rem 5%; max-width: 1400px; margin: 0 auto; }
  .tech-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 30px; }

  .tech-card { text-decoration: none; color: inherit; border: 1px solid #222; background: #0a0a0a; transition: 0.3s; }
  .tech-card:hover { border-color: var(--cyan); transform: translateY(-5px); box-shadow: 0 10px 30px rgba(0, 242, 255, 0.1); }

  .tech-image-box { 
    width: 100%; 
    aspect-ratio: 4 / 5; 
    overflow: hidden; 
    background: #111; 
    border-bottom: 1px solid #222; 
  }
  .tech-image-box img { width: 100%; height: 100%; object-fit: cover; object-position: top; }

  .tech-card-content { padding: 1.5rem; font-family: 'Space Mono', monospace; }
  
  .tech-card-title { 
    color: var(--cyan); 
    font-size: 1.2rem; 
    margin: 0; 
    text-transform: uppercase;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;  
    overflow: hidden;
    height: 3.5rem; 
  }

  .tech-card-price { color: #888; font-size: 1.1rem; margin: 0.5rem 0; }

  .status-indicator { display: flex; align-items: center; gap: 8px; font-size: 0.65rem; margin-top: 1rem; }
  .status-dot { height: 6px; width: 6px; border-radius: 50%; }
  .status-indicator.in_stock .status-dot { background-color: var(--cyan); box-shadow: 0 0 8px var(--cyan); }
  .status-indicator.in_stock .status-text { color: var(--cyan); }
  .status-indicator.custom .status-dot { background-color: #444; }
  .status-indicator.custom .status-text { color: #666; }

  @media (max-width: 768px) { 
    .tech-grid { grid-template-columns: 1fr; } 
  }
</style>