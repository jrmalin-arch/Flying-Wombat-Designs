---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/layout.astro';

export async function getStaticPaths() {
  const productEntries = await getCollection('fwboysproducts');
  return productEntries.map(entry => ({
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Extract fields including the new 'gallery' array from CMS data
const { is_cc_by, designer_name, source_link, material, title, price, status, gallery } = entry.data;
---

<Layout title={`${title} | fw boys prints`}>
  <nav class="boys-detail-nav">
    <a href="/fw-boys-3d-prints" class="back-link">‚Üê back to shop</a>
    <span class="boys-brand">fw boys prints</span>
  </nav>

  <main class="tech-container">
    <div class="tech-grid">
      
      <div class="tech-slider-stage">
        <div class="tech-slider" id="productSlider">
          {gallery && gallery.map((item, index) => (
            <div class="tech-slide" id={`slide-${index}`}>
              <img src={item.image} alt={`${title} - angle ${index + 1}`} />
              {item.caption && (
                <div class="tech-caption">
                  <span class="caption-prefix">DATA_REF:</span> {item.caption}
                </div>
              )}
            </div>
          ))}
        </div>

        {gallery && gallery.length > 1 && (
          <div class="tech-slider-nav">
            {gallery.map((item, index) => (
              <a href={`#slide-${index}`} class="tech-nav-thumb">
                <img src={item.image} alt="Select frame" />
              </a>
            ))}
          </div>
        )}
      </div>

      <div class="info-stage">
        <h1 class="tech-title">{title}</h1>
        <p class="tech-price">{price}</p>
        
        <div class="tech-description">
          <Content />
        </div>

        <div class="specs-box">
          <h3>Technical Specs</h3>
          <ul>
            <li><strong>Material:</strong> {material || 'High-Strength PLA+'}</li>
            <li><strong>Precision:</strong> 0.2mm Layer Height</li>
            <li>
              <strong>Status:</strong> 
              <span class={status === 'in_stock' ? 'status-ready' : 'status-custom'}>
                {status === 'in_stock' ? 'UNIT_READY_FOR_DISPATCH' : 'UNIT_PENDING_PRODUCTION'}
              </span>
            </li>
          </ul>
        </div>

        {is_cc_by && (
          <div class="tech-license-box">
            <h3 class="license-label">Attribution (CC BY 4.0)</h3>
            <ul class="license-list">
              <li><span>Model:</span> {title}</li>
              <li><span>Designer:</span> {designer_name}</li>
              <li><span>Source:</span> <a href={source_link} target="_blank" rel="noopener noreferrer">Original Work</a></li>
            </ul>
            <div class="license-disclaimer">
              <strong>Notice:</strong> While we did not design this 3D model, we have been granted permission to sell physical prints. 
              We take pride in our print quality using {material || 'High-Strength PLA+'} and rigorous calibration.
            </div>
          </div>
        )}

        <a href={`/contact?product=${encodeURIComponent(title)}`} class="order-button">
          {status === 'in_stock' ? 'Claim This Unit' : 'Request Custom Build'}
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  :root { --cyan: #00f2ff; }

  :global(html) { background-color: #000; margin: 0; padding: 0; height: 100%; }
  :global(body) { background-color: #000 !important; color: #fff !important; margin: 0; min-height: 100vh; display: flex; flex-direction: column; }

  .boys-detail-nav { display: flex; justify-content: space-between; padding: 1.5rem 5%; background: #000; border-bottom: 2px solid var(--cyan); align-items: center; }
  .boys-brand { font-family: 'Space Mono', monospace; color: var(--cyan); text-transform: uppercase; letter-spacing: 2px; font-weight: bold; }
  .back-link { font-family: 'Space Mono', monospace; text-decoration: none; color: #666; font-size: 0.8rem; }
  
  .tech-container { max-width: 1200px; margin: 4rem auto; padding: 0 5%; flex-grow: 1; }
  .tech-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; }

  /* --- TECH SLIDER STYLES --- */
  .tech-slider-stage { 
    position: sticky; 
    top: 2rem;
    border: 2px solid var(--cyan);
    background: #050505;
    box-shadow: 0 0 20px rgba(0, 242, 255, 0.1);
    max-height: 90vh;
    display: flex;
    flex-direction: column;
  }
  .tech-slider {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    width: 100%;
    aspect-ratio: 4 / 5;
    max-height: 75vh;
  }
  .tech-slider::-webkit-scrollbar { display: none; }
  
  .tech-slide {
    flex: 0 0 100%;
    scroll-snap-align: start;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #0a0a0a;
  }
  .tech-slide img { width: 100%; height: 100%; object-fit: contain; }

  .tech-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.85);
    border-top: 1px solid var(--cyan);
    color: #fff;
    padding: 0.8rem;
    font-family: 'Space Mono', monospace;
    font-size: 0.75rem;
  }
  .caption-prefix { color: var(--cyan); font-weight: bold; }

  .tech-slider-nav {
    display: flex;
    gap: 8px;
    padding: 8px;
    background: #000;
    border-top: 1px solid #222;
    overflow-x: auto;
    height: 75px;
    flex-shrink: 0;
  }
  .tech-nav-thumb {
    width: 50px;
    height: 50px;
    flex: 0 0 auto;
    border: 1px solid #333;
    filter: grayscale(1);
    transition: 0.3s;
  }
  .tech-nav-thumb:hover { border-color: var(--cyan); filter: grayscale(0); }
  .tech-nav-thumb img { width: 100%; height: 100%; object-fit: cover; }

  /* --- INFO SECTION STYLES --- */
  .tech-title { font-family: 'Space Mono', monospace; font-size: clamp(2rem, 5vw, 3.5rem); color: var(--cyan); margin: 0; text-transform: uppercase; line-height: 1.2; }
  .tech-price { font-family: 'Space Mono', monospace; font-size: 1.8rem; color: #888; margin: 1rem 0; }
  .tech-description { font-family: 'Quicksand', sans-serif; line-height: 1.6; color: #ccc; margin-bottom: 2.5rem; }

  /* SPECS BOX: White text (default from body) with prominent border */
  .specs-box { border: 1px dashed var(--cyan); padding: 1.5rem; background: #050505; margin-bottom: 2rem; }
  .specs-box h3 { font-family: 'Space Mono', monospace; color: var(--cyan); margin-top: 0; font-size: 0.9rem; text-transform: uppercase; }
  .specs-box ul { font-family: 'Space Mono', monospace; font-size: 0.85rem; color: #fff; list-style: none; padding: 0; }
  .status-ready { color: var(--cyan); font-weight: bold; }
  .status-custom { color: #888; font-style: italic; }

  /* ATTRIBUTION BOX: Forced grey text to override global white */
  .tech-license-box { 
    border: 1px solid #222; 
    padding: 1.5rem; 
    background: #050505; 
    margin-bottom: 2rem; 
    font-family: 'Space Mono', monospace; 
  }
  .license-label { color: #666; font-size: 0.9rem; margin-top: 0; text-transform: uppercase; border-bottom: 1px solid #222; padding-bottom: 0.5rem; }
  .license-list { list-style: none; padding: 0; margin: 1rem 0; font-size: 0.85rem; }
  
  .license-list li { 
    margin-bottom: 0.4rem; 
    color: #888 !important; 
  }
  .license-list span { color: #ccc; margin-right: 5px; }
  .license-list a { color: #888; text-decoration: underline; }

  .license-disclaimer { 
    font-size: 0.8rem;
    line-height: 1.4;
    color: #666 !important; 
  }
  .license-disclaimer strong {
    color: #888 !important; 
  }

  .order-button { display: inline-block; background: var(--cyan); color: #000; padding: 1.2rem 2.5rem; text-decoration: none; font-family: 'Space Mono', monospace; font-weight: bold; text-transform: uppercase; transition: 0.3s ease; border: none; cursor: pointer; }
  .order-button:hover { background: #fff; transform: translateY(-3px); box-shadow: 0 5px 15px rgba(255, 255, 255, 0.2); }

  @media (max-width: 900px) { 
    .tech-grid { grid-template-columns: 1fr; gap: 2.5rem; } 
    .tech-slider { max-height: 60vh; }
    .tech-slider-stage { position: relative; top: 0; max-height: none; }
  }
</style>