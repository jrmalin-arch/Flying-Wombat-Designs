---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us | flying wombat designs">
  <nav class="simple-nav">
    <div class="nav-left">
      <a href="/" class="brand-link">
        <img src="/fwd-logo-simple.png" alt="Logo" class="nav-logo" />
        <span class="nav-title">flying wombat designs</span>
      </a>
    </div>
    <a href="/" class="back-link">‚Üê back to home</a>
  </nav>

  <main class="contact-container">
    <div class="contact-grid">
      <div class="contact-info">
        <h1 class="brand-heading">Get in <span class="accent-text">Touch</span></h1>
        <p>Have a question about a knit pattern, or need a custom Dummy 13 color? Send us a message and the Wombat crew will get back to you.</p>
        
        <div class="info-blocks">
          <div class="block">
            <strong>Location</strong>
            <p>Small Batch Handmade in the USA</p>
          </div>
          <div class="block">
            <strong>Response Time</strong>
            <p>Typically within 24-48 hours</p>
          </div>
        </div>
      </div>

      <div class="form-wrapper">
        <form action="https://api.web3forms.com/submit" method="POST" class="contact-form">
          <input type="hidden" name="access_key" value="f5d25398-3b5f-42ae-8c63-598eac57ee90">
          
          <input type="hidden" id="product-name" name="interested_in_product" value="None Specified" />

          <input type="hidden" name="redirect" value="http://localhost:4321/thanks">

          <div class="field">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required placeholder="Your name" />
          </div>

          <div class="field">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" required placeholder="email@example.com" />
          </div>

          <div class="field">
            <label for="interest">Interested In:</label>
            <select id="interest" name="interest">
              <option value="knits">Handmade Knits & Jewelry</option>
              <option value="3d-prints">FW Boys 3D Prints</option>
              <option value="custom">Custom Commission</option>
            </select>
          </div>

          <div class="field">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" required placeholder="Tell us what you're looking for..."></textarea>
          </div>

          <button type="submit" class="submit-button">Send Message</button>
        </form>
      </div>
    </div>
  </main>
</Layout>

<style>
  .simple-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 5%;
    border-bottom: 2px solid #1A1A1A;
    background: white;
  }
  .brand-link { display: flex; align-items: center; gap: 15px; text-decoration: none; color: #1A1A1A; }
  .nav-logo { height: 50px; width: auto; }
  .nav-title { font-family: 'Henny Penny', cursive; font-size: 1.8rem; }
  .back-link { font-family: 'Space Mono', monospace; text-decoration: none; color: #666; font-size: 0.9rem; font-weight: bold; }

  .contact-container { max-width: 1100px; margin: 5rem auto; padding: 0 5%; }
  .contact-grid { display: grid; grid-template-columns: 1fr 1.2fr; gap: 5rem; }

  .brand-heading { font-family: 'Henny Penny', cursive; font-size: 3.5rem; margin-top: 0; }
  .accent-text { color: #FF5722; }
  .contact-info p { font-family: 'Quicksand', sans-serif; font-size: 1.2rem; line-height: 1.6; color: #444; }

  .info-blocks { margin-top: 3rem; }
  .block { margin-bottom: 2rem; font-family: 'Space Mono', monospace; }
  .block strong { display: block; text-transform: uppercase; letter-spacing: 1px; color: #888; margin-bottom: 0.5rem; }

  .form-wrapper {
    background: white;
    border: 4px solid #1A1A1A;
    box-shadow: 15px 15px 0px #1A1A1A;
  }
  .contact-form { padding: 3rem; }

  .field { margin-bottom: 1.5rem; }
  .field label { 
    display: block; 
    font-family: 'Space Mono', monospace; 
    font-weight: bold; 
    margin-bottom: 0.5rem; 
    text-transform: uppercase;
    font-size: 0.8rem;
  }

  input, select, textarea {
    width: 100%;
    padding: 1rem;
    border: 2px solid #1A1A1A;
    font-family: 'Quicksand', sans-serif;
    font-size: 1rem;
    outline: none;
    box-sizing: border-box;
  }

  .submit-button {
    width: 100%;
    background: #1A1A1A;
    color: white;
    padding: 1.2rem;
    border: none;
    font-family: 'Space Mono', monospace;
    font-weight: bold;
    text-transform: uppercase;
    cursor: pointer;
    transition: 0.2s;
  }
  .submit-button:hover { background: #FF5722; }

  @media (max-width: 850px) {
    .contact-grid { grid-template-columns: 1fr; gap: 3rem; }
    .contact-form { padding: 2rem; }
  }
</style>

<script>
  function setupContact() {
    const urlParams = new URLSearchParams(window.location.search);
    const product = urlParams.get('product');
    
    if (product) {
      const hiddenInput = document.getElementById('product-name') as HTMLInputElement;
      if (hiddenInput) {
        hiddenInput.value = product;
      }
      
      const select = document.getElementById('interest') as HTMLSelectElement;
      if (select) {
        if (product.toLowerCase().includes('dummy') || product.toLowerCase().includes('dragon')) {
           select.value = '3d-prints';
        } else {
           select.value = 'knits';
        }
      }
    }
  }

  setupContact();
  document.addEventListener('astro:after-swap', setupContact);
</script>