---
// FIXED: Capitalized "Layout" to match usage and ensure it is defined for the build
import Layout from '../layouts/layout.astro';
---

<Layout title="Message Sent | flying wombat designs">
  <nav class="simple-nav">
    <div class="nav-left">
      <a href="/" class="brand-link">
        <img src="/fwd-logo-simple.png" alt="Logo" class="nav-logo" />
        <span class="nav-title">flying wombat designs</span>
      </a>
    </div>
  </nav>

  <main class="thanks-container">
    <div class="thanks-card">
      <div class="check-icon">âœ“</div>
      <h1>Message Received!</h1>
      <p>Thanks for reaching out to the Wombat crew. We've received your inquiry and will get back to you shortly.</p>
      
      <div class="next-steps">
        <a href="/" class="primary-button">Back to Home</a>
        <a href="/fw-boys-3d-prints" class="secondary-button">Visit 3D Prints Shop</a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .simple-nav {
    display: flex;
    justify-content: center;
    padding: 2rem;
    border-bottom: 2px solid #1A1A1A;
  }
  .brand-link { display: flex; align-items: center; gap: 15px; text-decoration: none; color: #1A1A1A; }
  .nav-logo { height: 60px; width: auto; }
  .nav-title { font-family: 'Henny Penny', cursive; font-size: 2rem; }

  .thanks-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    padding: 0 5%;
  }

  .thanks-card {
    max-width: 600px;
    text-align: center;
    background: white;
    border: 4px solid #1A1A1A;
    padding: 4rem 2rem;
    box-shadow: 20px 20px 0px #1A1A1A;
  }

  .check-icon {
    font-size: 4rem;
    color: #39ff14;
    background: #000;
    width: 80px;
    height: 80px;
    line-height: 80px;
    border-radius: 50%;
    margin: 0 auto 2rem;
  }

  h1 { font-family: 'Henny Penny', cursive; font-size: 3rem; margin-bottom: 1rem; }
  p { font-family: 'Quicksand', sans-serif; font-size: 1.2rem; color: #444; line-height: 1.6; }

  .next-steps {
    margin-top: 3rem;
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .primary-button, .secondary-button {
    padding: 1rem 2rem;
    text-decoration: none;
    font-family: 'Space Mono', monospace;
    font-weight: bold;
    text-transform: uppercase;
    border: 2px solid #1A1A1A;
    transition: 0.2s;
  }

  .primary-button { background: #1A1A1A; color: white; }
  .primary-button:hover { background: #FF5722; border-color: #FF5722; }

  .secondary-button { background: white; color: #1A1A1A; }
  .secondary-button:hover { background: #eee; }
</style>