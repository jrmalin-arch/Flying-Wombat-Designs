---
interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
	</head>
	<body>
		<slot />

		<footer class="site-footer">
			<div class="footer-content">
				<p>Â© 2025 Flying Wombat Designs</p>
				<a href="https://www.instagram.com/flyingwombatdesigns/" target="_blank" rel="noopener noreferrer" class="social-link">
					<i class="fa-brands fa-instagram"></i> Follow us on Instagram
				</a>
			</div>
		</footer>

		<style is:global>
			.site-footer {
				margin-top: 4rem;
				padding: 2rem 5%;
				border-top: 1px solid #eee;
				text-align: center;
				font-family: 'Space Mono', monospace;
			}
			.footer-content {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 0.5rem;
			}
			.social-link {
				color: #1A1A1A;
				text-decoration: none;
				font-size: 0.9rem;
				transition: color 0.3s ease;
				display: flex;
				align-items: center;
				gap: 8px;
			}
			.social-link:hover {
				color: #FF5722; /* Matches your accent color */
			}
			.social-link i {
				font-size: 1.2rem;
			}
		</style>
	</body>
</html>